    <div class="card-container d-flex gap-4 flex-wrap justify-content-center">

        <!-- Login Card -->
        <div data-aos="fade-up" class="card bg_dark1 py-5 px-4 rounded_30 text-white text-center">
            <h2 class="text-white mb-4">Login</h2>

            <form method="post" asp-action="login">
                <div class="form-group mb-3 text-start">
                    <label asp-for="UserEmail" class="form-label">Email</label>
                    <input asp-for="UserEmail" type="email" class="form-control rounded-pill" placeholder="Enter email" />
                </div>
                <div class="form-group mb-4 text-start">
                    <label asp-for="UserPassword" class="form-label">Password</label>
                    <input asp-for="UserPassword" type="password" class="form-control rounded-pill" placeholder="Enter password" />
                </div>
                <button type="submit" class="button rounded-pill d-block mx-auto">Login</button>
            </form>

            @if (ViewBag.loginError != null)
            {
                <div class="alert alert-danger text-center mt-3">
                    @ViewBag.loginError
                </div>
            }
        </div>

        <!-- Register Card -->
        <div data-aos="fade-up" class="card bg_dark1 py-5 px-4 rounded_30 text-white text-center">
            <h2 class="text-white mb-4">Register</h2>

            <form method="post" asp-action="Register">
                <div class="form-group mb-3 text-start">
                    <label asp-for="UserName" class="form-label">User Name</label>
                    <input asp-for="UserName" class="form-control rounded-pill" placeholder="Enter user name" />
                </div>
                <div class="form-group mb-3 text-start">
                    <label asp-for="UserEmail" class="form-label">Email</label>
                    <input asp-for="UserEmail" type="email" class="form-control rounded-pill" placeholder="Enter email" />
                </div>
                <div class="form-group mb-4 text-start">
                    <label asp-for="UserPassword" class="form-label">Password</label>
                    <input asp-for="UserPassword" type="password" class="form-control rounded-pill" placeholder="Enter password" />
                </div>
                <div class="form-group mb-4 text-start">
                    <label asp-for="UserAddress" class="form-label">User Address</label>
                    <input asp-for="UserAddress" class="form-control rounded-pill" placeholder="Enter address" />
                </div>
                <button type="submit" class="button rounded-pill d-block mx-auto">Register</button>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success text-center">
                    @ViewBag.Success
                </div>
            }
        </div>
    </div>

