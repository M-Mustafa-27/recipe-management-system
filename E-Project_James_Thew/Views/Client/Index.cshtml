@{
	Layout = "~/Views/Shared/_ClientLayout.cshtml";
}


<!-- -------------------------------------- CAROUSEL ---------------------------------- -->
<div class="main position-relative">
    <div class="main_1">
        <section id="carouselSection" class="center_home">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img id="carouselimg1" src="~/ClientCss/images/icons-svg/carouselimg1.jpg" class="d-block" alt="...">
                        <div class="carousel-caption d-md-block">
                            <span class="d-block fs-1 family_2">Italian</span>
                            <h1 class="mt-2" id="cDesc">"Classic Italian flavors with rich sauces, herbs, and hearty tradition."</h1>
                            <h6 class="mb-0 mt-4"><a id="cBtn" class="button rounded-pill d-block text-center" asp-controller="Client" asp-action="free_recipes.html">View Recipes</a></h6>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img id="carouselimg2" src="~/ClientCss/images/icons-svg/carouselimg2.jpg" class="d-block img-fluid" alt="...">
                        <div class="carousel-caption d-md-block">
                            <span class="d-block fs-1 family_2">Vegetarian</span>
                            <h1 class="mt-2" id="cDesc">"Fresh, flavorful, and packed with wholesome plant-based goodness."</h1>
                            <h6 class="mb-0 mt-4"><a id="cBtn" class="button rounded-pill d-block text-center" asp-controller="Client" asp-action="free_recipes.html">View Recipes</a></h6>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img id="carouselimg3" src="~/ClientCss/images/icons-svg/non-veg.jpg" class="d-block img-fluid" alt="...">
                        <div class="carousel-caption d-md-block">
                            <span class="d-block fs-1 family_2">Non - Vegetarian</span>
                            <h1 class="mt-2" id="cDesc">"Hearty meat dishes loaded with bold flavors and savory spices."</h1>
                            <h6 class="mb-0 mt-4"><a id="cBtn" class="button rounded-pill d-block text-center" asp-controller="Client" asp-action="free_recipes.html">View Recipes</a></h6>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </section>
    </div>

    <!-- ------------------------ JAMES INTRO ------------------------ -->
    <div data-aos="flip-left" id="jamesIntroBox" class="main_2 w-100">
        <section id="sched">
            <div class="container-xl">
                <div class="row row-cols-1 row-cols-md-3 sched_1">
