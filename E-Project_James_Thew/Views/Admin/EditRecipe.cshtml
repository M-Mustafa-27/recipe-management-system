@model E_Project_James_Thew.Models.Recipe
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="recipe-wrapper">
    <div class="recipe-form-card shadow">
        <h2 class="form-title mb-4">✏️ Edit Recipe</h2>
        <form asp-action="EditRecipe" method="post">
            <input type="hidden" asp-for="RecipeId" />

            <div class="form-group">
                <label>Recipe Name</label>
                <input asp-for="RecipeName" class="form-control" />
            </div>

            <div class="form-group">
                <label>Category</label>
                <input asp-for="RecipeCategory" class="form-control" />
            </div>

            <div class="form-group">
                <label>Status</label>
                <input asp-for="RecipeStatus" class="form-control" />
            </div>

            <div class="form-group">
                <label>Image URL (won't re-upload)</label>
                <input asp-for="RecipeImage" class="form-control" />
            </div>

            <div class="form-group">
                <label>Ingredients</label>
                <input asp-for="RecipeIngredients" class="form-control" />
            </div>

            <div class="form-group">
                <label>Full Recipe</label>
                <textarea asp-for="FullRecipe" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label>Description</label>
                <textarea asp-for="RecipeDescription" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-success mt-3">💾 Save Changes</button>
        </form>
    </div>
</div>
